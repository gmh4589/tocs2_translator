#:import Factory kivy.factory.Factory

<ToolTipButton>:

<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0] + 5, self.texture_size[1] + 5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

<MessageBox@Popup>:
    auto_dismiss: False
    size_hint: None, None
    size: 200, 125

    Button:
        id: popupBTN
        text: 'ОК'
        background_normal: ''
        background_down: ''
        background_color: .21, .56, .18, 1
        on_release: root.dismiss()